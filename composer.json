{
  "name": "compropago/php-sdk",
  "type": "library",
  "description": "PHP SDK for Compropago API",
  "keywords": ["pagos internet","payment gateway"],
  "homepage": "https://compropago.com/documentacion/librerias",
  "version": "5.0.0.0",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Eduardo Aguilar",
      "email": "eduardo.aguilar@compropago.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "rmccue/requests": "^1.7"
  },
  "require-dev":{
    "phpunit/phpunit": ">=4.8"
  },
  "autoload": {
    "psr-4": {
      "CompropagoSdk\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
        "Tests\\": "tests"
    }
  },
  "scripts" : {
    "test": "./vendor/bin/phpunit --configuration ./unittest.xml --testsuite unittest"
  }
}
